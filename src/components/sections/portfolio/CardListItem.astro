---
const { title, sub_title, years, details } = Astro.props;
---

<li
  class="rounded-xl border border-default bg-offset p-5 shadow-lg transition-all duration-300 ease-in-out hover:-translate-y-1 hover:border-primary hover:bg-start hover:shadow-lg">
  <div class="flex flex-col items-start justify-between sm:flex-row">
    <div class="mb-4 sm:mb-0">
      <h3 class="text-3xl font-semibold">{title}</h3>
      <p class="pt-2 text-xl font-medium text-secondary">{sub_title}</p>
    </div>
    <p class="whitespace-nowrap text-default sm:text-right">
      {years}
    </p>
  </div>
  <p class="mt-4 text-lg leading-relaxed text-default">{details}</p>
</li>
